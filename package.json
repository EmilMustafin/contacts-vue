{
    "name": "contacts-vue",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "run-p type-check \"build-only {@}\" --",
        "preview": "vite preview",
        "build-only": "vite build",
        "type-check": "vue-tsc",
        "lint:format": "prettier --cache --check .",
        "lint:style": "stylelint --max-warnings 0 --ignore-path .gitignore \"**/*.{css,scss,vue,vuex}\"",
        "lint": "eslint . --fix",
        "lint:all": "concurrently \"npm run type-check\" \"npm run lint\" \"npm run format\" \"npm run lint:style\"",
        "format": "prettier --write src/",
        "test:unit": "vitest",
        "update": "npx npm-check-updates -i"
    },
    "dependencies": {
        "vue": "^3.5.12",
        "vue-eslint-parser": "^9.4.3",
        "vue-router": "^4.4.5"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.14.0",
        "@tsconfig/node22": "^22.0.0",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.9.0",
        "@typescript-eslint/eslint-plugin": "^8.14.0",
        "@typescript-eslint/parser": "^8.14.0",
        "@vitejs/plugin-vue": "^5.1.5",
        "@vitest/eslint-plugin": "^1.1.8",
        "@vue/eslint-config-prettier": "^10.1.0",
        "@vue/eslint-config-typescript": "^14.1.3",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.6.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.0",
        "eslint": "^9.14.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^9.31.0",
        "jsdom": "^25.0.1",
        "lucide-vue-next": "^0.456.0",
        "postcss": "^8.4.49",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "stylelint": "^16.10.0",
        "stylelint-config-css-modules": "^4.4.0",
        "stylelint-config-recess-order": "^5.1.1",
        "stylelint-config-recommended-vue": "^1.5.0",
        "stylelint-config-standard": "^36.0.1",
        "tailwindcss": "^3.4.14",
        "typescript": "~5.6.3",
        "typescript-eslint": "^8.14.0",
        "uuid": "^11.0.3",
        "vite": "^5.4.11",
        "vite-plugin-checker": "^0.8.0",
        "vite-plugin-vue-devtools": "^7.6.4",
        "vitest": "^2.1.4",
        "vue-tsc": "^2.1.10"
    }
}
